<!DOCTYPE html>
<html lang="en">

<head>
    <title>BTOR - Thread</title>
    <link rel="manifest" href="/manifest.json">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="index, follow">
    <meta name="description" content="BTOR - The communication platform of the future">
    <meta name="theme-color" content="#8C52FF">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="/pwa-icons/apple-icon.png">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel="stylesheet" href="/styles/thread/styles.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="/assets/navbar/styles.css">
</head>

<body>
    
    <!-- Navbars -->
    <div class="topbar">
        <div class="navbar">
            <a href="/"><img src="/assets/logo.png" height="55" class="logo"></a>
            <a href="/threads/new"><button class="navBtn topBtn"><i class="fa fa-plus-square"></i> New thread</button></a>
            <a href="/settings"><button class="navBtn topBtn"><i class="fa fa-user-cog"></i> <%=username%></button></a>
            <a href="/logout"><button class="navBtn topBtn"><i class="fa fa-user-times"></i> Sign out</button></a>
        </div>
        <hr>
    </div>
    <section class="basic-grid bottombar navbar">
        <a href="/threads/new" class="card"><button class="navBtn bottomBtn"><i class="fa fa-plus-square"></i></button></a>
        <a href="/settings" class="card"><button class="navBtn bottomBtn"><i class="fa fa-user-cog"></i> <%=username%></button></a>
        <a href="/logout" class="card"><button class="navBtn bottomBtn"><i class="fa fa-user-times"></i></button></a>
    </section>
    <!-- Navbars -->

    <h5 id="title" class="title"><%=thread.title%></h5>
    <div id="comments">
        <% thread.comments.forEach((comment)=>{%>
        <div class="comment"><h3 class="author"><%=thread.usernames[comment.author]%>:</h3><%-comment.comment%><p class="comment-id">ID: <%=comment.comment_id%></p></div>
        <%})%>
    </div>
    <br>
    <div class="formContainer">
        <form id="commentForm">
            <label for="message">Comment:</label>
            <br>
            <textarea type="text" id="comment" required name="comment"></textarea>
            <br>
            <input type="submit" value="Comment">
        </form>
    </div>
    <script src="/scripts/thread/index.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/anchorme/2.1.2/anchorme.min.js"></script>
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
            })
        }
    </script>
</body>

</html>